<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_blue_100">

    <HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="@color/md_white"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/md_white"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp">

        <ImageButton
            android:id="@+id/button_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_new"
            android:background="@drawable/button_selector"
            android:padding="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>

        <ImageButton
            android:id="@+id/button_pencil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_paint_brush_2"
            android:background="@drawable/button_selector"
            android:padding="2dp"
            android:layout_marginRight="2dp"/>

        <ImageButton
            android:id="@+id/button_eraser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_eraser_3"
            android:background="@drawable/button_selector"
            android:padding="2dp"
            android:layout_marginRight="2dp"/>

        <ImageButton
            android:id="@+id/button_undo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_undo"
            android:background="@drawable/button_selector"
            android:padding="2dp"
            android:layout_marginRight="2dp"/>

        <ImageButton
            android:id="@+id/button_redo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_undo"
            android:background="@drawable/button_selector"
            android:padding="2dp"
            android:layout_marginRight="2dp"/>

        <ImageButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_save"
            android:background="@drawable/button_selector"
            android:padding="2dp"/>

    </LinearLayout>
</HorizontalScrollView>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bikshanov.fingerpaint.PaintView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:context="com.bikshanov.fingerpaint.MainActivityFragment"
        tools:showIn="@layout/activity_main"
        android:layout_margin="5dp">

    </com.bikshanov.fingerpaint.PaintView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_gravity="top|center"
        android:background="@color/md_white">

        <LinearLayout
            android:id="@+id/brushPanel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/panel_border"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/brushWidthButton"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/smallest"
                android:background="@drawable/brush_button_border" />

            <ImageButton
                android:id="@+id/smallEraserButton"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/small"
                android:background="@drawable/brush_button_border"/>

            <ImageButton
                android:id="@+id/smallLargeBrushButton"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/medium"
                android:background="@drawable/brush_button_border"/>

            <ImageButton
                android:id="@+id/mediumEraserButton"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/large"
                android:background="@drawable/brush_button_border"/>

            <ImageButton
                android:id="@+id/largeEraserButton"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/largest"
                android:background="@drawable/brush_button_border"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/md_white"
        android:layout_margin="5dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.thebluealliance.spectrum.SpectrumPalette
                android:id="@+id/palette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:spectrum_autoPadding="true"
                app:spectrum_colors="@array/demo_colors"
                app:spectrum_columnCount="20">

            </com.thebluealliance.spectrum.SpectrumPalette>

        </HorizontalScrollView>

    </LinearLayout>

</FrameLayout>

</LinearLayout>

