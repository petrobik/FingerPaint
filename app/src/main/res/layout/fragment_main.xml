<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_blue_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/md_white"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        android:background="@color/md_white"
        android:layout_gravity="center_horizontal">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:background="@color/md_white"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp">

                <ImageButton
                    android:id="@+id/button_brush"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_paint_brush_2"
                    android:background="@drawable/button_selector"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"/>

                <ImageButton
                    android:id="@+id/button_eraser"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_eraser_3"
                    android:background="@drawable/button_selector"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"/>

                <ImageButton
                    android:id="@+id/button_pattern"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_flower"
                    android:background="@drawable/button_selector"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"/>

                <ImageButton
                    android:id="@+id/button_undo"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_undo"
                    android:background="@drawable/button_selector"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"/>

                <ImageButton
                    android:id="@+id/button_new"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_trash"
                    android:background="@drawable/button_selector"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"/>

                <ImageButton
                    android:id="@+id/button_save"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_save"
                    android:background="@drawable/button_selector"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <com.bikshanov.fingerpaint.PaintView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="com.bikshanov.fingerpaint.MainActivityFragment"
        tools:showIn="@layout/activity_main"
        android:layout_margin="4dp">

    </com.bikshanov.fingerpaint.PaintView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/md_white"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.thebluealliance.spectrum.SpectrumPalette
                android:id="@+id/palette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:spectrum_autoPadding="true"
                app:spectrum_colors="@array/demo_colors"
                app:spectrum_columnCount="20">

            </com.thebluealliance.spectrum.SpectrumPalette>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>

